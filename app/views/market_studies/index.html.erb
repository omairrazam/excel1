



<div class = "narrow-container">
<p id="notice"><%= notice %></p>
  
  <hr>
  
  <table class="table table-striped">
  <thead>
    <thead>
      <tr>
        <th>Date of Post</th>
        <th> Title</th>
        <th>Content</th>
        <% if current_user.present? and current_user.is_admin? %>
          <th></th>
        <% end %>
      </tr>
    </thead>
  </thead>
  <tbody>
    <% @market_studies.each do |market_study| %>
      <tr>
        <td><%= market_study.created_at.strftime("%B %d, %Y") %></td>
      <td><%= link_to market_study.title , market_study%></td>
      <td><%= market_study.content %></td>
      <% if current_user.present? and current_user.is_admin? %>
        <td><span class="glyphicon glyphicon-scissors" aria-hidden="true"></span> &nbsp;&nbsp;<%= link_to 'Edit', edit_market_study_path(market_study)  %></td>
      <% end %>
    </tr>
      <% end %>
    
  </tbody>

  </table>

  
</div>


</div>
